<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/texst_set_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <fragment
            android:name="com.example.helenapopova.mythirdapplication.fragments.ButtonLink"
            android:id="@+id/buttons_link_fragment"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/button_link"/>

        <fragment
            android:name="com.example.helenapopova.mythirdapplication.fragments.Introduction"
            android:id="@+id/introduction_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/introduction"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>